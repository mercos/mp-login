{
	"name": "Mercos Login",
	"version": "3",
	"description": "This is a 'private' extension for the support team of the app 'app.mercos.com', not intended to be used for regular users.",
	"homepage_url": "https://github.com/mercos/mp-login",
	"manifest_version": 3,
	"minimum_chrome_version": "36",
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	"permissions": [
		"activeTab",
		"tabs"
	],
	"optional_permissions": [
		"*://*/"
	],
	"background": {
		"persistent": false,
		"scripts": [
			"api.js",
			"background.js"
		]
	},
	"content_scripts": [{
        "matches": [
            "http://app.mercos.com/*",
            "https://app.mercos.com/*"
        ],
        "js": [
            "content.js"
        ],
        "run_at": "document_end",
        "all_frames": false
    }],
    "page_action": {
        "default_icon": {
            "19": "icon-19.png",
            "38": "icon-38.png"
        }
    },
	"options_page": "options.html"
}
